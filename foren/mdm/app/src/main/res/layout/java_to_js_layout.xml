<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:layout_weight="1">
        <com.example.test_webview_demo.utils.X5WebView android:id="@+id/web_jsjava" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
        <Button android:textSize="20dp" android:id="@+id/web_jsjava_close_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="native关闭web页面" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
        <TextView android:textSize="15dp" android:textColor="#f8022b" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp" android:text="X5webview" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View android:background="#000000" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="3dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginBottom="3dp">
                <EditText android:id="@+id/edit_jsjava_edit" android:layout_width="match_parent" android:layout_height="50dp" android:layout_weight="1"/>
                <Button android:id="@+id/bt_jsjava_edit" android:layout_width="match_parent" android:layout_height="50dp" android:text="提交" android:layout_weight="3"/>
            </LinearLayout>
            <View android:background="#000000" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="1dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginBottom="3dp">
                <TextView android:id="@+id/text_jsjava_num" android:layout_width="match_parent" android:layout_height="50dp" android:layout_weight="1"/>
                <Button android:id="@+id/bt_jsjava_num_add" android:layout_width="match_parent" android:layout_height="50dp" android:text="+" android:layout_weight="3"/>
                <Button android:id="@+id/bt_jsjava_num_minuse" android:layout_width="match_parent" android:layout_height="50dp" android:text="-" android:layout_weight="3"/>
            </LinearLayout>
            <View android:background="#000000" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="1dp"/>
        </LinearLayout>
        <TextView android:textSize="15dp" android:textColor="#f8022b" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp" android:text="Android框架" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
