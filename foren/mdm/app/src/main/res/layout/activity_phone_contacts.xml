<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <FrameLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="1px">
            <EditText android:textColor="@color/gray_a" android:textColorHint="@color/gray_c" android:gravity="center" android:id="@+id/et_search" android:background="@drawable/shape_voice_gray" android:layout_width="match_parent" android:layout_height="30dp" android:layout_margin="10dp" android:hint="搜索：手机通讯录"/>
            <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/iv_search_clear" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/search_clear"/>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/phone_llyEdit" android:background="@color/yellow_light" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textColor="@color/txt_red_finace" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="6dp" android:text="快速一键导入外部联系人"/>
            <TextView android:textSize="10sp" android:textColor="@color/gray_b" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="3dp" android:layout_marginBottom="5dp" android:text="获取更多人脉，随时随地，共享"/>
        </LinearLayout>
        <ListView android:id="@+id/phone_listView" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@null" android:fastScrollEnabled="true"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/phone_llySelect" android:background="@color/gray_f" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1px" android:layout_alignParentBottom="true">
        <TextView android:textColor="@color/txt_red_finace" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="已选择：" android:layout_weight="1"/>
        <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/phone_ensure" android:background="@drawable/btn_red_selector" android:layout_width="85dp" android:layout_height="30dp" android:layout_margin="5dp" android:text="@string/ensure"/>
    </LinearLayout>
</LinearLayout>
