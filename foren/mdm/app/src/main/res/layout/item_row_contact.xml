<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="14sp" android:textColor="#8a99ac" android:id="@+id/header" android:background="#e0e0e0" android:paddingLeft="10dp" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <RelativeLayout android:background="@drawable/ease_mm_listitem" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="60dp">
        <com.hy.frame.view.RoundImageView android:id="@+id/avatar" android:background="@mipmap/def_head" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="11dp" android:scaleType="fitXY" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="11dp" android:layout_toLeftOf="@+id/unread_msg_number" android:layout_toRightOf="@+id/avatar">
            <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textColor="#8c8c8c" android:ellipsize="end" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:text="昵称" android:singleLine="true"/>
                <TextView android:textSize="@dimen/txt_small" android:textColor="@color/txt_gray" android:ellipsize="end" android:id="@+id/connection" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="4dp" android:text="0" android:singleLine="true"/>
            </LinearLayout>
            <TextView android:textSize="13sp" android:textColor="#888888" android:ellipsize="end" android:id="@+id/signature" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="4dp" android:text="1" android:singleLine="true"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:gravity="center" android:id="@+id/unread_msg_number" android:background="@drawable/ease_unread_dot" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
