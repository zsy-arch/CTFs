<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/gray_b" android:layout_gravity="center_vertical" android:id="@+id/txt_list_empty" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="选择要发布的商品类型"/>
        <HorizontalScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_container_goods_classify" android:paddingLeft="@dimen/margin_normal" android:paddingRight="@dimen/margin_normal" android:layout_width="wrap_content" android:layout_height="50dp"/>
        </HorizontalScrollView>
    </FrameLayout>
    <ListView android:id="@+id/listView_goods_classify" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="0dp" android:divider="@null" android:layout_weight="1"/>
    <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/add_class" android:background="@color/theme" android:layout_width="match_parent" android:layout_height="44dp" android:text="添加主营类目"/>
</LinearLayout>
