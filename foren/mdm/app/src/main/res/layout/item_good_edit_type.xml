<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/in_divider_horizontal_black"/>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include layout="@layout/in_divider_vertical_black"/>
        <LinearLayout android:gravity="center" android:paddingTop="@dimen/margin_normal" android:paddingBottom="@dimen/margin_normal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
            <TextView android:id="@+id/txt_typerule" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        </LinearLayout>
        <include layout="@layout/in_divider_vertical_black"/>
        <LinearLayout android:gravity="center" android:paddingTop="@dimen/margin_normal" android:paddingBottom="@dimen/margin_normal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/txt_typeprice" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <include layout="@layout/in_divider_vertical_black"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="@dimen/margin_normal" android:paddingBottom="@dimen/margin_normal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/txt_typenum" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <include layout="@layout/in_divider_vertical_black"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="@dimen/margin_normal" android:paddingBottom="@dimen/margin_normal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:id="@+id/txt_typenone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <include layout="@layout/in_divider_vertical_black"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="@dimen/margin_normal" android:paddingBottom="@dimen/margin_normal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2">
            <TextView android:textColor="@color/blue" android:id="@+id/txt_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding_normal" android:text="编辑"/>
            <TextView android:textColor="@color/blue" android:id="@+id/txt_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下架"/>
            <TextView android:textColor="@color/blue" android:id="@+id/txt_delete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding_normal" android:text="删除"/>
        </LinearLayout>
        <include layout="@layout/in_divider_vertical_black"/>
    </LinearLayout>
    <include layout="@layout/in_divider_horizontal_black"/>
</LinearLayout>
