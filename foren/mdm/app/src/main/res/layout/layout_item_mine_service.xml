<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:id="@+id/ll_parent" android:background="@color/white" android:paddingTop="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="58dp" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:background="@drawable/shape_header_circle" android:layout_width="40dp" android:layout_height="40dp">
            <com.hy.frame.view.RotundityImageView android:id="@+id/riv_user" android:layout_width="35dp" android:layout_height="35dp" android:src="@mipmap/def_head"/>
        </LinearLayout>
        <TextView android:textSize="10sp" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="44dp" android:text="匿名" android:lines="1"/>
        <TextView android:textSize="6sp" android:gravity="center" android:id="@+id/tv_zhima" android:background="@drawable/bgm_zhima_code" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="100分"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:paddingTop="3dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="@color/black" android:id="@+id/tv_title" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:text="服务描述" android:lines="1" android:layout_weight="1"/>
            <TextView android:textSize="14sp" android:textColor="@color/txt_red" android:id="@+id/tv_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥0.00"/>
            <TextView android:textSize="9sp" android:textColor="@color/demand_super" android:id="@+id/tv_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="30dp" android:text=" /次"/>
            <com.cdlinglu.server.audio.MusicPlayer android:gravity="center_vertical" android:id="@+id/mp_player" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView android:textSize="9sp" android:textColor="@color/demand_sub" android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="服务描述" android:maxLines="2"/>
        <com.hy.frame.view.MyGridView android:id="@+id/mgv_pic" android:paddingTop="5dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:horizontalSpacing="5dp" android:verticalSpacing="5dp" android:numColumns="7"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
            <TextView android:textSize="9sp" android:textColor="@color/demand_sub" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="认证:"/>
            <com.vsf2f.f2f.ui.view.IdentyStateView android:id="@+id/identyStateView" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <View android:layout_width="0dp" android:layout_height="1px" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:textColor="@color/btn_green" android:id="@+id/tv_change" android:background="@drawable/btn_gray_selector" android:paddingLeft="8dp" android:paddingTop="2dp" android:paddingRight="8dp" android:paddingBottom="2dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/up_service" android:lines="1"/>
            <TextView android:textSize="12sp" android:textColor="@color/gray_a" android:id="@+id/tv_edit" android:background="@drawable/btn_gray_selector" android:paddingLeft="8dp" android:paddingTop="2dp" android:paddingRight="8dp" android:paddingBottom="2dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="编辑" android:lines="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
