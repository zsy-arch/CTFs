<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_secrect" android:background="@drawable/item_selector" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_normal" android:text="保密" android:layout_weight="1"/>
        <ImageView android:layout_gravity="center" android:id="@+id/img_secret" android:background="@mipmap/ic_select" android:visibility="invisible" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="@dimen/margin_normal"/>
    </LinearLayout>
    <include layout="@layout/in_divider"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_man" android:background="@drawable/item_selector" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_normal" android:text="男" android:layout_weight="1"/>
        <ImageView android:layout_gravity="center" android:id="@+id/img_man" android:background="@mipmap/ic_select" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="@dimen/margin_normal"/>
    </LinearLayout>
    <include layout="@layout/in_divider"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_women" android:background="@drawable/item_selector" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_normal" android:text="女" android:layout_weight="1"/>
        <ImageView android:layout_gravity="center" android:id="@+id/img_women" android:background="@mipmap/ic_select" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="@dimen/margin_normal"/>
    </LinearLayout>
</LinearLayout>
