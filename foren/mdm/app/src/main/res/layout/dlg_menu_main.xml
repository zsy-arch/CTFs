<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/add_llyContainer" android:background="@drawable/bgm_popup2" android:layout_width="140dp" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/txtAddGroup" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="40dp" android:text="发起群聊" android:drawableLeft="@drawable/icon_menu_addgroup" android:drawablePadding="@dimen/padding_normal"/>
        <View android:background="@color/gray_a" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/txtAddCircle" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="40dp" android:text="我要发布" android:drawableLeft="@drawable/icon_menu_release" android:drawablePadding="@dimen/padding_normal"/>
        <View android:background="@color/gray_a" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/txtAddfriend" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/add_friend" android:drawableLeft="@drawable/icon_menu_addfriend" android:drawablePadding="@dimen/padding_normal"/>
        <View android:background="@color/gray_a" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/txtScanner" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="40dp" android:text="扫一扫" android:drawableLeft="@drawable/icon_menu_scan" android:drawablePadding="@dimen/padding_normal"/>
        <View android:background="@color/gray_a" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/txtHelpFeed" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="40dp" android:text="帮助与反馈" android:drawableLeft="@drawable/icon_menu_feedback" android:drawablePadding="@dimen/padding_normal"/>
    </LinearLayout>
</LinearLayout>
