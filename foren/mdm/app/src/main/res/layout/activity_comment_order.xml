<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:id="@+id/activity_comment_order" android:background="@color/divider_gray_" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="44dp">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_demand_request"/>
                    <TextView android:textSize="16sp" android:textColor="@color/txt_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="需求信息"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:onClick="toDetail">
                    <ImageView android:id="@+id/iv_icon" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginRight="10dp" android:src="@drawable/img_empty" android:scaleType="fitXY"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="服务标题" android:maxLines="1" android:lines="1"/>
                        </LinearLayout>
                        <TextView android:textSize="12sp" android:textColor="@color/demand_sub" android:ellipsize="end" android:gravity="top" android:id="@+id/tv_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="服务描述" android:lines="2"/>
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="12sp" android:textColor="@color/gray_b" android:gravity="center" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="服务/共享方式： "/>
                            <TextView android:gravity="center" android:id="@+id/tv_mode" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="线下服务"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp">
                            <TextView android:textSize="12sp" android:textColor="@color/gray_b" android:gravity="center" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="总价： "/>
                            <TextView android:textSize="12sp" android:textColor="@color/txt_red" android:gravity="center" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥ "/>
                            <TextView android:textColor="@color/txt_red" android:gravity="center" android:id="@+id/tv_price" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="90"/>
                            <TextView android:textSize="12sp" android:textColor="@color/gray_b" android:gravity="center" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="数量："/>
                            <TextView android:gravity="center" android:id="@+id/tv_num" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_user" android:visibility="gone" android:layout_width="match_parent" android:layout_height="44dp">
                    <TextView android:textSize="12sp" android:textColor="@color/demand_super" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_publisher" android:layout_width="60dp" android:layout_height="wrap_content" android:text="匿名" android:lines="1" android:drawableLeft="@drawable/icon_mine" android:drawablePadding="5dp"/>
                    <TextView android:textSize="9sp" android:textColor="@color/demand_sub" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:text="认证:"/>
                    <com.vsf2f.f2f.ui.view.IdentyStateView android:id="@+id/identyStateView" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                    <TextView android:textSize="12sp" android:textColor="@color/demand_super" android:gravity="center_vertical" android:paddingRight="10dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="联系我" android:drawableLeft="@drawable/icon_service" android:drawablePadding="5dp" android:onClick="toChat"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@color/white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <View android:background="@color/gray_e" android:layout_width="30dp" android:layout_height="1px"/>
                    <TextView android:textSize="16sp" android:textColor="@color/demand_sub" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:text="综合评分"/>
                    <View android:background="@color/gray_e" android:layout_width="30dp" android:layout_height="1px"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                    <TextView android:textColor="@color/gray_c" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="一般"/>
                    <com.vsf2f.f2f.ui.needs.star.StarLinearLayout android:orientation="horizontal" android:id="@+id/sll_attidu" android:layout_width="wrap_content" android:layout_height="wrap_content" app:starImageSize="20dp" app:starPadding="3dp" app:starCount="5" app:starEmpty="@drawable/icon_pingfen_nor" app:starFill="@drawable/icon_pingfen_hover" app:starHalf="@drawable/icon_pingfen_half" app:clickable="true" app:stepSize="0"/>
                    <TextView android:textColor="@color/gray_c" android:id="@+id/tv_starstr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="一般"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:background="@color/white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="14sp" android:textColor="@color/demand_super" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="评价："/>
                <EditText android:textSize="12sp" android:textColor="@color/demand_sub" android:textColorHint="@color/gray_c" android:gravity="top" android:id="@+id/et_content" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:hint="需求已经完成，写下您的体验和评价，让更多的人看到……" android:lines="4" android:maxLength="100"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:layout_marginBottom="17dp">
                    <ImageView android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:src="@drawable/icon_comment_pic" android:onClick="addPic"/>
                    <com.hy.frame.view.MyGridView android:id="@+id/gv_pic" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:horizontalSpacing="5dp" android:numColumns="3"/>
                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/in_divider"/>
            <TextView android:textSize="15dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_send" android:background="@drawable/btn_red_selector" android:layout_width="match_parent" android:layout_height="40dp" android:layout_margin="20dp" android:text="提交"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
