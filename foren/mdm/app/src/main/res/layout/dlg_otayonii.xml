<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:background="@drawable/icon_otay_bgm" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="35sp" android:textColor="#ffe94d" android:id="@+id/txt_num" android:paddingLeft="15dp" android:paddingTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="50" android:layout_centerInParent="true"/>
        <TextView android:textSize="18sp" android:textColor="@color/theme" android:gravity="center" android:id="@+id/txt_prompt" android:layout_width="300dp" android:layout_height="55dp" android:layout_marginTop="245dp" android:text="50 金豆奖励领取成功" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/container" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <View android:id="@+id/center_point" android:paddingTop="90dp" android:layout_width="1dp" android:layout_height="1dp" android:layout_centerInParent="true" android:layout_centerHorizontal="true"/>
    <View android:id="@+id/btn_stop" android:layout_width="300dp" android:layout_height="70dp" android:layout_marginTop="120dp" android:layout_below="@+id/center_point" android:layout_centerHorizontal="true"/>
</RelativeLayout>
