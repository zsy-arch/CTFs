<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/title" android:background="@color/top_bar_normal_bg" android:layout_width="match_parent" android:layout_height="@dimen/height_top_bar">
        <include layout="@layout/ease_commom_back_btn"/>
        <TextView android:textSize="18sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/recording_video" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <VideoView android:id="@+id/mVideoView" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ImageView android:id="@+id/switch_btn" android:padding="10dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/em_camera_switch_selector" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
        <Chronometer android:textColor="#fff" android:gravity="center_horizontal" android:id="@+id/chronometer" android:background="@color/btn_gray_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true"/>
        <ImageView android:gravity="center" android:id="@+id/recorder_start" android:visibility="visible" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/em_video_recorder_start_btn" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        <ImageView android:gravity="center" android:id="@+id/recorder_stop" android:visibility="invisible" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/em_video_recorder_stop_btn" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
