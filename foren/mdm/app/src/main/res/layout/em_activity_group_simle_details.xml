<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#eee" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="6dp" android:layout_marginRight="8dp">
        <ImageView android:id="@+id/avatar" android:padding="5dp" android:layout_width="55dp" android:layout_height="55dp" android:src="@drawable/em_groups_icon" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="16sp" android:textColor="#0f0f0f" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_toRightOf="@+id/avatar" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/email_contanier" android:background="@drawable/em_button_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_marginTop="6dp" android:layout_marginRight="11dp">
        <LinearLayout android:gravity="center_vertical" android:background="@drawable/em_button_myprofile_selector" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#8f8f8f" android:padding="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/group_of_lord"/>
            <TextView android:textSize="14sp" android:textColor="#080808" android:id="@+id/tv_admin" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:background="@drawable/em_button_myprofile_selector" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="#8f8f8f" android:padding="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/introduction"/>
            <TextView android:textSize="14sp" android:textColor="#080808" android:id="@+id/tv_introduction" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:enabled="false" android:textSize="18sp" android:textColor="@android:color/white" android:id="@+id/btn_add_to_group" android:background="@drawable/btn_red_selector" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_marginTop="15dp" android:layout_marginRight="11dp" android:layout_marginBottom="8dp" android:text="@string/join_the_chat"/>
</LinearLayout>
