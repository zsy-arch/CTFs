<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/chat_input_parent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="@color/gray_c" android:layout_width="match_parent" android:layout_height="0.5dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/bottom_bar_height">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/chat_input_switch_menu" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent">
            <ImageView android:id="@+id/chat_input_open_menu" android:padding="10dp" android:visibility="visible" android:layout_width="@dimen/bottom_bar_height" android:layout_height="wrap_content" android:src="@drawable/icon_chat_bottom_menu_open"/>
            <ImageView android:id="@+id/chat_input_close_menu" android:padding="10dp" android:visibility="gone" android:layout_width="@dimen/bottom_bar_height" android:layout_height="wrap_content" android:src="@drawable/icon_chat_bottom_menu_close"/>
            <include layout="@layout/in_divider_vertical"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/chat_input_llyChat" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/chat_input_voice" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:src="@drawable/ease_chatting_setmode_voice_btn"/>
            <ImageView android:id="@+id/chat_input_keyboard" android:background="@drawable/ease_chatting_setmode_keyboard_btn" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp"/>
            <LinearLayout android:gravity="center" android:id="@+id/chat_input_press_to_speak" android:background="@drawable/ease_chatting_setmode_speak_btn" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="6dp" android:layout_marginRight="6dp" android:layout_marginBottom="6dp" android:layout_weight="1">
                <TextView android:textSize="16sp" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/button_pushtotalk"/>
            </LinearLayout>
            <RelativeLayout android:gravity="bottom" android:id="@+id/chat_input_llyEdit" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:layout_marginBottom="3dp" android:layout_weight="1">
                <EditText android:textSize="16sp" android:textColorHighlight="@color/green_light" android:id="@+id/chat_input_edit" android:background="@drawable/shape_edit_line_green" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="40dp" android:maxLines="3"/>
            </RelativeLayout>
            <ImageView android:id="@+id/chat_input_iv_face_normal" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/icon_chat_bottom_face"/>
            <ImageView android:id="@+id/chat_input_iv_face_checked" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/ease_chatting_setmode_keyboard_btn"/>
            <ImageView android:id="@+id/chat_input_btn_more" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/ease_type_select_btn"/>
            <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/chat_input_btn_send" android:background="@drawable/btn_green_selector" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="32dp" android:layout_marginRight="4dp" android:text="@string/button_send"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/chat_input_llyMenu" android:visibility="gone" android:layout_width="0dp" android:layout_height="@dimen/bottom_bar_height" android:layout_weight="1">
            <TextView android:textColor="#666666" android:gravity="center" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="菜单1" android:drawableLeft="@drawable/icon_chat_bottom_menu_item" android:layout_weight="1"/>
            <include layout="@layout/in_divider_vertical"/>
            <TextView android:textColor="#666666" android:gravity="center" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="菜单2" android:drawableLeft="@drawable/icon_chat_bottom_menu_item" android:layout_weight="1"/>
            <include layout="@layout/in_divider_vertical"/>
            <TextView android:textColor="#666666" android:gravity="center" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="菜单3" android:drawableLeft="@drawable/icon_chat_bottom_menu_item" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
