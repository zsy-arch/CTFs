<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layout_root" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:padding="20dp" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:background="#9c9c9c" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textColor="#000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="设置Tag和Alias "/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/corners_bg" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Tag :"/>
                <EditText android:textSize="15sp" android:textColor="#000000" android:id="@+id/et_tag" android:layout_width="160dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" style="@style/push_tag"/>
                <Button android:textSize="12sp" android:id="@+id/bt_tag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="设置Tag  "/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Alias:"/>
                <EditText android:textSize="15sp" android:textColor="#000000" android:id="@+id/et_alias" android:layout_width="160dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" style="@style/push_alias"/>
                <Button android:textSize="12sp" android:id="@+id/bt_alias" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="设置Alias"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="#9c9c9c" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp">
            <TextView android:textColor="#000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="定制通知栏样式"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/corners_bg" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp">
            <Button android:id="@+id/setStyle1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="定制通知栏样式：Basic"/>
            <Button android:id="@+id/setStyle2" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="定制通知栏样式：Custom"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="#9c9c9c" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp">
            <TextView android:textColor="#000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="设置"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/corners_bg" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp">
            <Button android:id="@+id/bu_setTime" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="设置接收push时间"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
