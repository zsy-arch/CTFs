<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_select" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/tab_orderpay_selector"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_order_item" android:background="@color/white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:background="@color/white" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="12sp" android:textColor="@color/txt_red" android:id="@+id/tv_order_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="订单号："/>
                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                <TextView android:textSize="14sp" android:textColor="@color/txt_red" android:gravity="center" android:id="@+id/tv_status" android:clickable="true" android:layout_width="wrap_content" android:layout_height="24dp" android:text="@string/order_ing"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/demand_more" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="12-01-01 00:00:00"/>
        </LinearLayout>
        <include layout="@layout/in_divider"/>
        <LinearLayout android:orientation="horizontal" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="94dp" android:layout_marginTop="10dp">
            <ImageView android:id="@+id/iv_icon" android:layout_width="94dp" android:layout_height="94dp" android:layout_marginRight="10dp" android:src="@mipmap/img_no_pic" android:scaleType="centerCrop"/>
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="12sp" android:textColor="@color/demand_super" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="0dp" android:layout_height="wrap_content" android:text="服务标题" android:lines="1" android:maxLength="10" android:layout_weight="1"/>
                    <TextView android:textColor="@color/gray_a" android:id="@+id/tv_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="x2"/>
                </LinearLayout>
                <TextView android:textSize="12sp" android:textColor="@color/demand_sub" android:ellipsize="end" android:gravity="top" android:id="@+id/tv_content" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="5dp" android:text="服务描述" android:maxLines="2" android:layout_weight="1"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="11sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥"/>
                    <TextView android:id="@+id/tv_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10"/>
                    <TextView android:textSize="11sp" android:id="@+id/tv_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="/次"/>
                    <View android:layout_width="0dp" android:layout_height="1px" android:layout_weight="1"/>
                    <TextView android:textSize="11sp" android:textColor="@color/txt_red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="合计：￥"/>
                    <TextView android:textColor="@color/txt_red" android:id="@+id/tv_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_user" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
            <com.hy.frame.view.RotundityImageView android:id="@+id/riv_revers" android:layout_width="30dp" android:layout_height="30dp" android:src="@mipmap/def_head"/>
            <TextView android:textSize="12sp" android:textColor="@color/demand_super" android:gravity="center_vertical" android:id="@+id/tv_publisher" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="匿名" android:drawablePadding="10dp" android:layout_weight="1"/>
            <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:background="@color/white" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="match_parent">
                <TextView android:textSize="14sp" android:textColor="@color/gray_a" android:gravity="center" android:id="@+id/tv_cancel" android:background="@drawable/btn_gray_selector" android:visibility="gone" android:clickable="true" android:layout_width="70dp" android:layout_height="24dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="取消订单"/>
                <TextView android:textSize="14sp" android:textColor="@color/gray_a" android:gravity="center" android:id="@+id/tv_reject" android:background="@drawable/btn_gray_selector" android:visibility="gone" android:clickable="true" android:layout_width="70dp" android:layout_height="24dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="拒绝接单"/>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_accept" android:background="@drawable/btn_orderoper_selector" android:visibility="gone" android:clickable="true" android:layout_width="70dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:text="确认接单"/>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_sure" android:background="@drawable/btn_orderoper_selector" android:visibility="gone" android:clickable="true" android:layout_width="70dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:text="@string/check_service"/>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_pay" android:background="@drawable/btn_orderoper_selector" android:visibility="gone" android:clickable="true" android:layout_width="70dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:text="去付款"/>
                <TextView android:textSize="14sp" android:textColor="@color/btn_yellow" android:gravity="center" android:id="@+id/tv_comment" android:background="@drawable/btn_gray_selector" android:visibility="gone" android:clickable="true" android:layout_width="70dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:text="去评价"/>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_doservice" android:background="@drawable/btn_orderoper_selector" android:visibility="gone" android:clickable="true" android:layout_width="70dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:text="@string/tab_doservice"/>
                <TextView android:textSize="14sp" android:textColor="@color/txt_red" android:gravity="center" android:id="@+id/tv_return" android:background="@drawable/btn_gray_selector" android:visibility="gone" android:clickable="true" android:layout_width="70dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:text="@string/apply_refund"/>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_serviced" android:background="@drawable/btn_orderoper_selector" android:visibility="gone" android:clickable="true" android:layout_width="70dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:text="@string/tab_serviced"/>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_deal" android:background="@drawable/btn_orderoper_selector" android:visibility="gone" android:clickable="true" android:layout_width="70dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:text="@string/tab_deal"/>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_refund" android:background="@drawable/btn_orderoper_selector" android:visibility="gone" android:clickable="true" android:layout_width="70dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:text="@string/refund_info"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
