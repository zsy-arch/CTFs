<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="top" android:orientation="horizontal" android:background="@color/white" android:paddingLeft="10dp" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="160dp">
            <TextView android:textSize="16sp" android:textColor="@color/gray_c" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="举报原因"/>
            <EditText android:textSize="16sp" android:gravity="top" android:id="@+id/et_description" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:hint="请填写您的举报理由"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_normal">
            <TextView android:textSize="16sp" android:textColor="@color/txt_black" android:paddingBottom="@dimen/padding_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tab_upload_prof"/>
            <include layout="@layout/in_divider"/>
            <GridView android:id="@+id/gv_pic" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:horizontalSpacing="10dp" android:verticalSpacing="10dp" android:numColumns="3"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/report_llyAddpic" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent">
                <ImageView android:id="@+id/report_imgAddpic" android:background="@mipmap/ico_add" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:hint="添加图片"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/white" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="@dimen/margin_normal">
            <TextView android:textSize="16sp" android:textColor="@color/txt_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="联系方式"/>
            <EditText android:gravity="center_vertical" android:id="@+id/et_tel" android:background="@null" android:paddingLeft="20dp" android:layout_width="0dp" android:layout_height="match_parent" android:hint="请输入电话号码" android:layout_weight="1" style="@style/editPhoneStyle"/>
        </LinearLayout>
        <Button android:textSize="18sp" android:textColor="@color/white" android:id="@+id/btn_commit" android:background="@drawable/btn_red_selector" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="20dp" android:layout_marginTop="50dp" android:layout_marginRight="20dp" android:text="提交"/>
    </LinearLayout>
</ScrollView>
