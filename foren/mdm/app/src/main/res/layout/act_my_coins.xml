<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="#ffe3ad" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:background="#d85940" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:src="@drawable/icon_coins_def"/>
                <TextView android:textSize="12sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="当前金币(个)"/>
                <TextView android:textSize="30sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/mycoins_txtBalance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="0"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
                    <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/mycoins_btn_givecoins" android:background="@drawable/btn_red_selector_finace" android:paddingTop="3dp" android:paddingBottom="3dp" android:visibility="gone" android:layout_width="62dp" android:layout_height="wrap_content" android:text="转赠"/>
                    <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/mycoins_btn_sellcoins" android:background="@drawable/btn_red_selector_finace" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="62dp" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:text="出售"/>
                    <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/mycoins_btn_buymoney" android:background="@drawable/btn_red_selector_finace" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="62dp" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:text="充值"/>
                </LinearLayout>
                <TextView android:textSize="10sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="提示：充值获取更多金币"/>
            </LinearLayout>
            <ImageView android:id="@+id/mycoins_btnHelp" android:padding="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_coins_help" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false">
            <TextView android:textColor="@color/golden" android:gravity="center" android:id="@+id/mycoins_btn_dynamic" android:background="@drawable/shape_bgm_coins2" android:layout_width="0dp" android:layout_height="44dp" android:layout_margin="8dp" android:text="金币收支明细" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
