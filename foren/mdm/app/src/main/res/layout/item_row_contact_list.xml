<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/gray_e" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:textColor="@color/gray_b" android:id="@+id/header" android:paddingLeft="10dp" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <RelativeLayout android:background="@drawable/btn_bottom_selector" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginTop="1px">
        <com.hy.frame.view.RoundImageView android:id="@+id/avatar" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="11dp" android:src="@mipmap/def_head" android:scaleType="fitXY" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/margin_normal" android:layout_toLeftOf="@+id/unread_msg_number" android:layout_toRightOf="@+id/avatar">
            <TextView android:textSize="14dp" android:textColor="@color/txt_black" android:ellipsize="end" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:text="昵称" android:singleLine="true"/>
            <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="10dp" android:textColor="@color/txt_gray" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="4dp" android:text="人脉:" android:singleLine="true"/>
                <TextView android:textSize="10dp" android:textColor="@color/txt_gray" android:ellipsize="end" android:id="@+id/connection" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="4dp" android:text="0" android:singleLine="true"/>
                <TextView android:textSize="10dp" android:textColor="@color/txt_gray" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="4dp" android:text="人" android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
