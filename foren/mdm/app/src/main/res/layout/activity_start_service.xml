<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/activity_start_service" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="校验码"/>
            <EditText android:textSize="12sp" android:textColor="@color/demand_super" android:textColorHint="@color/gray_c" android:id="@+id/et_code" android:background="@color/white" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="46dp" android:hint="请输入服务校验码，服务才可以进行哦" android:layout_weight="1" android:inputType="number"/>
            <ImageButton android:id="@+id/imb_qrcode" android:background="@android:color/transparent" android:layout_width="@dimen/edit_height" android:layout_height="@dimen/edit_height" android:src="@drawable/icon_qrcode_regist"/>
        </LinearLayout>
        <TextView android:textSize="10sp" android:textColor="@color/txt_red" android:layout_gravity="center" android:padding="@dimen/padding_default" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="温馨提示：开始服务时，请与对方联系，索取服务校验码！"/>
        <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_ensure" android:background="@drawable/btn_red_selector" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_normal" android:text="确定"/>
    </LinearLayout>
</LinearLayout>
