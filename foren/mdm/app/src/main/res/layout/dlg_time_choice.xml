<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:background="@drawable/shape_round_7" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:textColor="@color/demand_super" android:gravity="center" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="44dp" android:text="有效期"/>
    <include layout="@layout/in_divider"/>
    <NumberPicker android:textColorHighlight="@color/blue" android:id="@+id/np_time" android:layout_width="wrap_content" android:layout_height="100dp" android:layout_marginTop="10dp" android:layout_marginBottom="9dp" style="@style/numberPickerStyle"/>
    <include layout="@layout/in_divider"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="44dp">
        <TextView android:textSize="14sp" android:textColor="@color/btn_green" android:gravity="center" android:id="@+id/btn_cancel" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/cancel" android:layout_weight="1"/>
        <TextView android:textSize="14sp" android:textColor="@color/btn_green" android:gravity="center" android:id="@+id/btn_sure" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/ensure" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
