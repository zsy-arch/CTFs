<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:background="@color/gray_e" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent" android:layout_height="44dp">
            <TextView android:textColor="@color/gray_a" android:gravity="center_vertical" android:paddingLeft="10dp" android:layout_width="100dp" android:layout_height="match_parent" android:text="型号"/>
            <EditText android:textColorHint="@color/gray_c" android:id="@+id/et_model" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="填写商品型号" android:maxLength="10"/>
        </LinearLayout>
        <include layout="@layout/in_divider"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="44dp">
            <TextView android:textColor="@color/gray_a" android:gravity="center_vertical" android:paddingLeft="10dp" android:layout_width="100dp" android:layout_height="match_parent" android:text="价格"/>
            <EditText android:textColorHint="@color/gray_c" android:id="@+id/et_price" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="填写商品价格" android:maxLength="7" android:inputType="numberDecimal"/>
        </LinearLayout>
        <include layout="@layout/in_divider"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="44dp">
            <TextView android:textColor="@color/gray_a" android:gravity="center_vertical" android:paddingLeft="10dp" android:layout_width="100dp" android:layout_height="match_parent" android:text="库存"/>
            <EditText android:textColorHint="@color/gray_c" android:id="@+id/et_stock" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="填写商品库存" android:maxLength="5" android:inputType="number"/>
        </LinearLayout>
        <TextView android:gravity="center_vertical" android:id="@+id/txt_guid" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/spec_llyDel" android:background="@color/white" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginTop="10dp">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_round_lose"/>
    </LinearLayout>
</LinearLayout>
