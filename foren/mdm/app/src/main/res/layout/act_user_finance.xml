<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/bgm_finance_center" android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar android:id="@+id/head_toolBar" android:paddingTop="25dp" android:fitsSystemWindows="false" android:layout_width="match_parent" android:layout_height="@dimen/header_height_fit">
                <TextView android:textSize="?attr/appTitleSize" android:textStyle="normal" android:textColor="?attr/appTitleColor" android:gravity="center" android:layout_gravity="center" android:id="@+id/head_vTitle" android:layout_width="wrap_content" android:layout_height="?attr/appHeaderHeight" android:text="@string/finance_title" android:singleLine="true"/>
            </android.support.v7.widget.Toolbar>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/cur_balance_"/>
            <TextView android:textSize="40sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/user_fnc_txtBalance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="0.00"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/frozen_cash" android:drawableLeft="@drawable/icon_warning" android:drawablePadding="6dp"/>
                <TextView android:textSize="15sp" android:textColor="@color/white" android:id="@+id/user_fnc_txtFrozen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.00"/>
            </LinearLayout>
            <TextView android:textSize="10sp" android:textColor="@color/calculator_white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:text="@string/frozen_cash_remind"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/user_fnc_btnWithdraw" android:background="@drawable/btn_red_selector_finace" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="62dp" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:text="@string/withdrawal"/>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/user_fnc_btnRecharge" android:background="@drawable/btn_red_selector_finace" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="62dp" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:text="@string/recharge"/>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/user_fnc_btnRedRecord" android:background="@drawable/btn_red_selector_finace" android:paddingTop="3dp" android:paddingBottom="3dp" android:layout_width="72dp" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:text="红包记录"/>
            </LinearLayout>
        </LinearLayout>
        <View android:background="@color/divider_gray_" android:layout_width="match_parent" android:layout_height="5dp"/>
        <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="65dp" android:baselineAligned="false">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/user_fnc_llyProfitShare" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/txt_red_finace" android:id="@+id/user_fnc_txtProfitShare" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.00"/>
