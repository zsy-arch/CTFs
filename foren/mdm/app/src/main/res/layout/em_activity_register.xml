<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#eff2f6" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ico_logo" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_weight="1.5">
        <RelativeLayout android:background="#fff" android:layout_width="match_parent" android:layout_height="54dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
            <ImageView android:id="@+id/iv_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/em_icon_account" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <EditText android:textSize="18sp" android:id="@+id/username" android:background="@null" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/user_name" android:singleLine="true" android:layout_toLeftOf="@+id/iv_username" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:background="#fff" android:layout_width="match_parent" android:layout_height="54dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp">
            <ImageView android:id="@+id/iv_password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/em_icon_pwd" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <EditText android:textSize="18sp" android:id="@+id/password" android:background="@null" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/password" android:singleLine="true" android:layout_toLeftOf="@+id/iv_password" android:layout_centerVertical="true" android:inputType="textPassword"/>
        </RelativeLayout>
        <RelativeLayout android:background="#fff" android:layout_width="match_parent" android:layout_height="54dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp">
            <ImageView android:id="@+id/iv_password2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/em_icon_pwd" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <EditText android:textSize="18sp" android:id="@+id/confirm_password" android:background="@null" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/confirm_password" android:singleLine="true" android:layout_toLeftOf="@+id/iv_password2" android:layout_centerVertical="true" android:inputType="textPassword"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="20dp" android:layout_marginRight="8dp">
            <Button android:textSize="20sp" android:textColor="@android:color/white" android:background="@drawable/em_button_login_bg" android:paddingTop="7dp" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="10dp" android:layout_marginRight="8dp" android:text="@string/register" android:onClick="register"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
