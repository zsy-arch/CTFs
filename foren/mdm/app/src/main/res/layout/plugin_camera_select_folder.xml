<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/file" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_gravity="center" android:id="@+id/file_back" android:background="@mipmap/plugin_camera_album_back" android:layout_width="130dp" android:layout_height="130dp" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
        <ImageView android:layout_gravity="center" android:id="@+id/file_image" android:background="@drawable/plugin_camera_albumbackground" android:layout_width="100dp" android:layout_height="100dp" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
        <ImageView android:layout_gravity="center" android:id="@+id/choose_back" android:background="@mipmap/plugin_camera_choose_back" android:visibility="gone" android:layout_width="100dp" android:layout_height="100dp" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
        <TextView android:textSize="16sp" android:textColor="#000000" android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/filenum" android:background="@mipmap/plugin_camera_filenum" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView android:textSize="15sp" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:singleLine="true"/>
</LinearLayout>
