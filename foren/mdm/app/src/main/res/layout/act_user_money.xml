<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/theme_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@color/calculator_white" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_wallet_money_big"/>
        <TextView android:textSize="18dp" android:textColor="@color/black_deep" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="我的零钱"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp">
            <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/black_deep" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥"/>
            <TextView android:textSize="35dp" android:textStyle="bold" android:textColor="@color/black_deep" android:id="@+id/money_tvBalance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.00"/>
        </LinearLayout>
        <TextView android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/money_tvRecharge" android:background="@drawable/btn_red_selector" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:text="@string/recharge"/>
        <TextView android:textStyle="bold" android:gravity="center" android:id="@+id/money_tvWithdrawal" android:background="@drawable/btn_white_selector2" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:text="@string/withdrawal"/>
        <TextView android:textSize="12dp" android:textColor="@color/gray_b" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="因相关业务限制,暂不支持银行卡充值服务，敬请见谅！"/>
        <TextView android:textSize="12dp" android:id="@+id/money_tvDetail" android:padding="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="提现记录"/>
    </LinearLayout>
</LinearLayout>
