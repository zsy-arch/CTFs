<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/xrefreshview_header_text" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="70dp">
    <RelativeLayout android:id="@+id/left_images" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="80dp" android:layout_centerVertical="true">
        <ImageView android:id="@+id/xrefreshview_header_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/refresh_arrow_down"/>
        <ProgressBar android:id="@+id/xrefreshview_header_progressbar" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp"/>
    </RelativeLayout>
    <ImageView android:id="@+id/xrefreshview_header_ok" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/xrefresh_ok" android:layout_toLeftOf="@+id/right_text" android:layout_centerVertical="true"/>
    <RelativeLayout android:id="@+id/right_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:id="@+id/xrefreshview_header_hint_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下拉刷新"/>
        <TextView android:textSize="12sp" android:id="@+id/xrefreshview_header_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="从未刷新" android:layout_below="@+id/xrefreshview_header_hint_textview"/>
    </RelativeLayout>
</RelativeLayout>
