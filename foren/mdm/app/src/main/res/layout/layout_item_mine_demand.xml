<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:id="@+id/ll_parent" android:background="@color/white" android:paddingTop="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="58dp" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:background="@drawable/shape_header_circle" android:layout_width="40dp" android:layout_height="40dp">
            <com.hy.frame.view.RotundityImageView android:id="@+id/riv_user" android:layout_width="35dp" android:layout_height="35dp" android:src="@mipmap/def_head"/>
        </LinearLayout>
        <TextView android:textSize="10sp" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="44dp" android:text="匿名" android:lines="1"/>
        <TextView android:textSize="6sp" android:gravity="center" android:id="@+id/tv_zhima" android:background="@drawable/bgm_zhima_code" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="100分"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:paddingTop="3dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="12sp" android:textColor="@color/black" android:id="@+id/tv_title" android:layout_width="0dp" android:layout_height="wrap_content" android:lines="1" android:layout_weight="10"/>
                    <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                    <TextView android:textSize="14sp" android:textColor="@color/txt_red" android:id="@+id/tv_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥0.00"/>
                    <TextView android:textSize="9sp" android:textColor="@color/demand_super" android:id="@+id/tv_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" /次"/>
                </LinearLayout>
                <TextView android:textSize="9sp" android:textColor="@color/demand_sub" android:id="@+id/tv_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:maxLines="2"/>
            </LinearLayout>
            <ImageView android:gravity="center_vertical" android:id="@+id/iv_edit" android:paddingLeft="30dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/icon_edit"/>
        </LinearLayout>
        <com.hy.frame.view.MyGridView android:id="@+id/mgv_pic" android:paddingTop="5dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:horizontalSpacing="5dp" android:verticalSpacing="5dp" android:numColumns="7"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="9sp" android:textColor="@color/demand_sub" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="认证:"/>
            <com.vsf2f.f2f.ui.view.IdentyStateView android:id="@+id/identyStateView" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="9sp" android:textColor="@color/demand_sub" android:gravity="center_vertical" android:id="@+id/tv_collect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="0" android:drawableLeft="@drawable/tab_star_selector" android:drawablePadding="2dp"/>
            <TextView android:textSize="9sp" android:textColor="@color/demand_sub" android:gravity="center_vertical" android:id="@+id/tv_browser" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="0" android:drawableLeft="@drawable/icon_population" android:drawablePadding="2dp"/>
            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:textColor="@color/txt_red" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tv_status" android:paddingLeft="25dp" android:paddingTop="8dp" android:paddingRight="3dp" android:paddingBottom="8dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="待支付" android:lines="1"/>
        </LinearLayout>
        <include layout="@layout/in_divider"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_choice" android:layout_width="match_parent" android:layout_height="44dp">
            <TextView android:textSize="12sp" android:textColor="@color/demand_super" android:id="@+id/tv_tab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
            <TextView android:textSize="12sp" android:textColor="@color/demand_sub" android:id="@+id/tv_server" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text=""/>
            <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:textColor="@color/demand_super" android:id="@+id/tv_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
            <ImageView android:id="@+id/iv_go" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:src="@mipmap/ico_next"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
