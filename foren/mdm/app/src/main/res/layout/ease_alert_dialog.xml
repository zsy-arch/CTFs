<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/shape_bgm_white_20" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/shape_bgm_white_20" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/txt_medium" android:gravity="center_horizontal" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_default" android:layout_marginTop="@dimen/margin_normal" android:layout_marginRight="@dimen/margin_default" android:text="@string/prompt"/>
            <TextView android:textSize="@dimen/txt_small" android:gravity="center_horizontal" android:id="@+id/alert_message" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="20dp"/>
        </LinearLayout>
        <include layout="@layout/in_divider"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:textSize="@dimen/txt_medium" android:textColor="#666666" android:gravity="center" android:id="@+id/btn_cancel" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/cancel" android:layout_weight="1"/>
            <Button android:textSize="@dimen/txt_medium" android:gravity="center" android:id="@+id/btn_ok" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/ok" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
