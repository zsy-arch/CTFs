<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:id="@+id/list_itease_layout" android:background="#fff" android:layout_width="match_parent" android:layout_height="59dp">
    <RelativeLayout android:id="@+id/avatar_container" android:layout_width="60dp" android:layout_height="match_parent" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <com.hy.frame.view.RoundImageView android:id="@+id/avatar" android:background="@mipmap/def_head2" android:layout_width="45dp" android:layout_height="45dp" android:layout_marginLeft="10dp" android:scaleType="fitXY" android:layout_centerVertical="true"/>
        <TextView android:textSize="10sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/unread_msg_number" android:background="@drawable/ease_unread_count_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="2dp" android:layout_alignParentRight="true"/>
        <ImageView android:id="@+id/group_dot" android:visibility="gone" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginRight="2dp" android:layout_marginBottom="5dp" android:src="@mipmap/icon_group_dot" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView android:textSize="13sp" android:textColor="@color/gray_c" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="7dp" android:text="time" android:layout_alignParentRight="true"/>
    <TextView android:textSize="16sp" android:textColor="@color/gray_a" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_marginTop="6dp" android:layout_marginRight="10dp" android:text="昵称" android:lines="1" android:layout_toLeftOf="@+id/time" android:layout_toRightOf="@+id/avatar_container"/>
    <ImageView android:id="@+id/msg_state" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="7dp" android:layout_marginBottom="5dp" android:src="@drawable/ease_msg_state_fail_resend" android:layout_toRightOf="@+id/avatar_container" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="14sp" android:textColor="#e84e40" android:id="@+id/mentioned" android:paddingLeft="7dp" android:paddingTop="7dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/were_mentioned" android:singleLine="true" android:layout_toRightOf="@+id/msg_state" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="14sp" android:textColor="@color/gray_b" android:gravity="center_vertical" android:id="@+id/message" android:paddingLeft="7dp" android:paddingRight="7dp" android:layout_width="wrap_content" android:layout_height="32dp" android:text="消息" android:lines="1" android:layout_toRightOf="@+id/mentioned" android:layout_alignParentBottom="true"/>
</RelativeLayout>
