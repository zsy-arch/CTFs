<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar android:id="@+id/head_toolBar" android:background="?attr/appTitleBarBg" android:fitsSystemWindows="false" android:layout_width="match_parent" android:layout_height="?attr/appHeaderHeight">
        <ImageView android:layout_gravity="left" android:id="@+id/top_imgBack" android:background="@drawable/default_selector" android:padding="@dimen/margin_normal" android:layout_width="?attr/appHeaderHeight" android:layout_height="?attr/appHeaderHeight" android:src="@drawable/icon_back" android:scaleType="center" android:contentDescription="@string/app_name"/>
        <TextView android:textSize="?attr/appTitleSize" android:textStyle="normal" android:textColor="?attr/appTitleColor" android:gravity="center" android:layout_gravity="center" android:id="@+id/head_vTitle" android:layout_width="wrap_content" android:layout_height="?attr/appHeaderHeight" android:text="@string/qrcode_me" android:singleLine="true"/>
        <ImageView android:layout_gravity="right" android:id="@+id/top_imgShare" android:background="@drawable/default_selector" android:padding="@dimen/margin_normal" android:layout_width="?attr/appHeaderHeight" android:layout_height="?attr/appHeaderHeight" android:src="@mipmap/ico_share_white" android:scaleType="center" android:layout_alignParentRight="true" android:contentDescription="@string/app_name"/>
        <TextView android:textColor="?attr/appTitleColor" android:gravity="center_vertical" android:layout_gravity="right" android:id="@+id/top_txtReGet" android:background="@drawable/default_selector" android:padding="@dimen/margin_normal" android:layout_width="wrap_content" android:layout_height="?attr/appHeaderHeight" android:text="@string/receive_again" android:layout_alignParentRight="true" android:contentDescription="@string/app_name"/>
    </android.support.v7.widget.Toolbar>
    <FrameLayout android:background="@color/txt_red_finace" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <include layout="@layout/in_loading"/>
        <ImageView android:id="@+id/img_qroced" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    </FrameLayout>
    <View android:background="@color/gray_pressed" android:layout_width="match_parent" android:layout_height="1px"/>
    <com.hy.frame.view.NavGroup android:orientation="horizontal" android:id="@+id/shop_groupFooter" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.hy.frame.view.NavView android:id="@+id/navaddfriend" android:tag="0" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:navText="@string/add_friend" app:navDraw="@drawable/tab_code_addfrenid_selector" style="@style/navMyCodeStyle"/>
        <com.hy.frame.view.NavView android:id="@+id/navshopmain" android:tag="1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:navText="@string/shop" app:navDraw="@drawable/tab_code_shop_selector" style="@style/navMyCodeStyle"/>
        <com.hy.frame.view.NavView android:id="@+id/navappdownload" android:tag="2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:navText="@string/app_download" app:navDraw="@drawable/tab_code_download_selector" style="@style/navMyCodeStyle"/>
        <com.hy.frame.view.NavView android:id="@+id/navme" android:tag="3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" app:navText="@string/invite_register" app:navDraw="@drawable/tab_code_register_selector" style="@style/navMyCodeStyle"/>
    </com.hy.frame.view.NavGroup>
</LinearLayout>
