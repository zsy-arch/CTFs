<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/oval_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="@dimen/txt_default" android:textColor="@color/txt_black" android:gravity="center" android:layout_width="match_parent" android:layout_height="50dp" android:text="@string/select_spec_value"/>
    <View android:background="@color/divider_gray" android:layout_width="match_parent" android:layout_height="1dp"/>
    <ListView android:id="@+id/listView" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="0dp" android:divider="@null" android:layout_weight="1"/>
    <View android:background="@color/divider_gray" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="@dimen/txt_default" android:textColor="@color/txt_gray" android:gravity="center" android:id="@+id/tv_cancel" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/cancel" android:layout_weight="1"/>
        <View android:layout_gravity="center_vertical" android:background="@color/divider_gray" android:layout_width="1dp" android:layout_height="40dp"/>
        <TextView android:textSize="@dimen/txt_default" android:textColor="@color/txt_gray" android:gravity="center" android:id="@+id/tv_confirm" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/confirm" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
