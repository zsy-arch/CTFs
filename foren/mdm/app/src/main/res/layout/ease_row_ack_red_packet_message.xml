        <ImageView android:layout_gravity="center" android:id="@+id/ease_msg_iv_ack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:src="@drawable/em_redbags_small_bg"/>
