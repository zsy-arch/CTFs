<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/albumback" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/showallphoto_headview" android:background="@mipmap/plugin_camera_title_bar" android:layout_width="match_parent" android:layout_height="45dp">
        <Button android:textSize="14sp" android:textColor="#fff" android:id="@+id/showallphoto_back" android:background="@drawable/plugin_camera_title_btn_back" android:layout_width="70dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="@string/album" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="#ffffff" android:id="@+id/showallphoto_headtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/photo" android:singleLine="true" android:layout_centerInParent="true"/>
        <Button android:textSize="15dp" android:textColor="#fff" android:id="@+id/showallphoto_cancel" android:background="@drawable/plugin_camera_title_btn_cancel" android:layout_width="67dp" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="@string/camera_cancel" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/showallphoto_bottom_layout" android:background="@mipmap/plugin_camera_bottom_bar" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentBottom="true">
        <Button android:id="@+id/showallphoto_preview" android:background="@drawable/plugin_camera_title_btn_preview" android:layout_width="90dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/preview" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <Button android:gravity="center" android:id="@+id/showallphoto_ok_button" android:background="@drawable/plugin_camera_ok_btn_state" android:layout_width="90dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/unfinished" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <GridView android:id="@+id/showallphoto_myGrid" android:background="@color/albumback" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="2dp" android:horizontalSpacing="10dp" android:verticalSpacing="10dp" android:numColumns="3" android:layout_above="@+id/showallphoto_bottom_layout" android:layout_below="@+id/showallphoto_headview" android:layout_centerInParent="true"/>
    <ProgressBar android:id="@+id/showallphoto_progressbar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
</RelativeLayout>
