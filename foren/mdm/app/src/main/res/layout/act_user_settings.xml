<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/groupinfo_flyGroupInvite" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding_normal">
            <com.hy.frame.view.KeyValueView android:id="@+id/settings_kvLocation" android:layout_width="match_parent" android:layout_height="wrap_content" app:kvDrawRight="@null" app:kvKey="位置对好友可见" style="@style/settingsKvStyle"/>
            <com.easeui.widget.EaseSwitchButton android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/sbtn_isVisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_default" app:switchStatus="1"/>
        </FrameLayout>
        <com.hy.frame.view.KeyValueView android:id="@+id/settings_kvMsgNotify" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" app:kvKey="@string/settings_msg_notify" style="@style/settingsKvStyle"/>
        <com.hy.frame.view.KeyValueView android:id="@+id/settings_kvProfile" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" app:kvKey="@string/title_user_profile" app:kvValueRight="true" style="@style/settingsKvStyle"/>
        <com.hy.frame.view.KeyValueView android:id="@+id/settings_kvIdentReal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1px" app:kvKey="实名认证" app:kvValueColor="@color/green_light" app:kvValueRight="true" style="@style/settingsKvStyle"/>
        <com.hy.frame.view.KeyValueView android:id="@+id/settings_kvIdentZM" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1px" app:kvKey="芝麻信用" app:kvValueColor="@color/green_light" app:kvValueRight="true" style="@style/settingsKvStyle"/>
        <com.hy.frame.view.KeyValueView android:id="@+id/settings_kvIdentCom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1px" app:kvKey="企业认证" app:kvValueColor="@color/green_light" app:kvValueRight="true" style="@style/settingsKvStyle"/>
        <com.hy.frame.view.KeyValueView android:id="@+id/settings_kvResetPwd" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding_default" app:kvKey="@string/account_safe" style="@style/settingsKvStyle"/>
        <com.hy.frame.view.KeyValueView android:id="@+id/settings_kvAddress" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding_default" app:kvKey="@string/address_ship" style="@style/settingsKvStyle"/>
        <com.hy.frame.view.KeyValueView android:id="@+id/settings_kvBlackList" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding_default" app:kvKey="@string/black_list" style="@style/settingsKvStyle"/>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/settings_llCheckVersion" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1px">
            <com.hy.frame.view.KeyValueView android:id="@+id/settings_kvCheckVersion" android:layout_width="match_parent" android:layout_height="wrap_content" app:kvKey="@string/settings_version_check" app:kvValueRight="true" style="@style/settingsKvStyle"/>
        </LinearLayout>
        <com.hy.frame.view.KeyValueView android:id="@+id/settings_kvClearCache" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1px" app:kvKey="@string/settings_cache_clear" app:kvValueRight="true" style="@style/settingsKvStyle"/>
        <com.hy.frame.view.KeyValueView android:id="@+id/settings_kvAboutFace" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1px" app:kvKey="@string/setting_about_face" app:kvValuePaddingRight="@dimen/margin_normal" app:kvValueRight="true" style="@style/settingsKvStyle"/>
        <Button android:textColor="@color/white" android:id="@+id/logout_btnLogout" android:background="@drawable/btn_red_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="30dp" android:layout_marginRight="10dp" android:layout_marginBottom="30dp" android:text="@string/login_out_account"/>
    </LinearLayout>
</ScrollView>
