<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/pay_cancel" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_remove_x2"/>
    <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:src="@drawable/icon_top_wallet"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/pay_llType" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="支付方式"/>
        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
        <com.hy.frame.view.NavView android:id="@+id/pay_nvType" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:navHorizontal="true" app:navText="@string/aliPay" app:navDraw="@drawable/icon_pay_ali" app:navDrawPadding="5dp"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_next2"/>
    </LinearLayout>
    <com.hy.frame.view.KeyValueView android:gravity="center" android:id="@+id/pay_price" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" app:kvKey="支付金额" app:kvValue="￥0.00" app:kvValueRight="true"/>
    <TextView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="需付款"/>
    <LinearLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp">
        <TextView android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥"/>
        <TextView android:textSize="26sp" android:textStyle="bold" android:id="@+id/pay_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.00"/>
    </LinearLayout>
    <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/txt_ensure" android:background="@drawable/btn_red_selector" android:layout_width="match_parent" android:layout_height="44dp" android:layout_margin="20dp" android:text="立即充值"/>
</LinearLayout>
