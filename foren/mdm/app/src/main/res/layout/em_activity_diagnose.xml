<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#fff" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/title" android:background="@color/top_bar_normal_bg" android:layout_width="match_parent" android:layout_height="@dimen/height_top_bar">
        <include layout="@layout/ease_commom_back_btn"/>
        <TextView android:textSize="18sp" android:textColor="#fff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/diagnose" android:layout_centerInParent="true"/>
