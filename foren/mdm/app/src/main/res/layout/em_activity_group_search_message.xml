<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/common_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:background="#ededed" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:paddingLeft="@dimen/padding_search_bar" android:paddingTop="7dp" android:paddingRight="7dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <EditText android:textSize="16sp" android:id="@+id/query" android:background="@drawable/ease_seabar_input" android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:hint="@string/search" android:singleLine="true" android:drawableLeft="@drawable/ease_search_bar_icon_normal" android:layout_centerVertical="true" android:imeOptions="actionSearch"/>
            <ImageButton android:id="@+id/search_clear" android:background="@android:color/transparent" android:padding="6dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:src="@drawable/ease_search_clear" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:textSize="15sp" android:textColor="@color/holo_green_light" android:gravity="center" android:id="@+id/tv_cancel" android:paddingLeft="6dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/cancel" android:layout_weight="0"/>
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="15sp" android:textColor="@color/btn_blue_normal" android:gravity="center_vertical" android:id="@+id/tv_search" android:background="@drawable/ease_common_tab_bg" android:paddingLeft="7dp" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="50dp"/>
        <ListView android:id="@+id/listview" android:layout_width="match_parent" android:layout_height="match_parent" android:cacheColorHint="#00000000"/>
        <TextView android:layout_gravity="center_horizontal" android:id="@+id/tv_no_result" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="80dp" android:text="无结果"/>
    </FrameLayout>
</LinearLayout>
