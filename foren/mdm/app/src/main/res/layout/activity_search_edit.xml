<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/activity_search_edit" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/theme" android:padding="10dp" android:layout_width="match_parent" android:layout_height="50dp">
        <ImageView android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_back" android:onClick="back"/>
        <RelativeLayout android:background="@color/gray_e" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_weight="1">
            <EditText android:textColor="@color/txt_gray" android:id="@+id/et_key" android:background="@null" android:paddingLeft="35dp" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/search_address"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/icon_search_" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:gravity="center" android:id="@+id/tv_search" android:clickable="true" android:layout_width="45dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:text="@string/search"/>
    </LinearLayout>
    <ListView android:id="@+id/lv_detail" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@color/divider_gray" android:dividerHeight="1dp" android:animateLayoutChanges="true"/>
</LinearLayout>
